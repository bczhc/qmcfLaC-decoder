<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="gravity" format="flags">
        <flag name="top" value="0"/>
        <flag name="center" value="1"/>
    </attr>
    <attr name="hint" format="string"/>
    <attr name="cursorVisible" format="boolean"/>
    <attr name="focusable" format="boolean"/>
    <attr name="text" format="string"/>
    <attr name="showedColor" format="string"/>
    <attr name="textSize" format="dimension"/>
    <attr name="backgroundColor" format="color"/>
    <attr name="sliderColor" format="color"/>
    <attr name="busMarkDotCount" format="integer"/>
    <attr name="busState" format="flags">
        <flag name="arrived" value="0"/>
        <flag name="onRoad" value="1"/>
    </attr>

    <declare-styleable name="ScrollEditText">
        <attr name="gravity"/>
        <attr name="hint"/>
        <attr name="cursorVisible"/>
        <attr name="focusable"/>
        <attr name="text"/>
    </declare-styleable>
    <declare-styleable name="ColorShowRL">
        <attr name="showedColor"/>
    </declare-styleable>
    <declare-styleable name="SmartHintEditText">
        <attr name="hint"/>
        <attr name="text"/>
        <attr name="textSize"/>
        <attr name="android:inputType"/>
    </declare-styleable>
    <declare-styleable name="RightDragView">
        <attr name="backgroundColor"/>
        <attr name="sliderColor"/>
    </declare-styleable>
    <declare-styleable name="TopLineNodeView">
        <attr name="busMarkDotCount"/>
        <attr name="busState"/>
    </declare-styleable>
</resources>
