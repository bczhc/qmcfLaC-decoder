<resources>
    <!-- Base application theme. -->
    <style name="Theme.Application" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="Theme.Application.NoActionBar" parent="Theme.Application">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.Application.Button" parent="Widget.MaterialComponents.Button">
    </style>

    <style name="Widget.Application.TextInputLayout.FilledBox"
           parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="Widget.Application.TextInputLayout.OutlinedBox"
           parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    </style>

    <style name="Theme.Application.Toolbar.Primary" parent="Widget.MaterialComponents.Toolbar.Primary">
    </style>

    <style name="Widget.Application.TextView.Light" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Application.DayNight.Dialog.Alert" parent="Theme.MaterialComponents.DayNight.Dialog.Alert"/>

    <style name="Theme.Application.DayNight.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog"/>

    <style name="Theme.Transparent" parent="Theme.Application.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- ================================================================ -->

    <style name="AppThemeNotTranslucent" parent="Theme.Application">
        <!-- Customize your theme here. -->
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="InputDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowFrame">@color/transparent</item><!-- 边框 -->
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item><!-- 半透明 -->
        <item name="windowNoTitle">true</item><!-- 无标题 -->
        <item name="android:windowBackground">@color/transparent</item><!-- 自己想要的背景 -->
        <item name="android:backgroundDimEnabled">true</item><!-- 模糊 -->
        <item name="android:windowSoftInputMode">stateAlwaysVisible</item><!--显示软键盘-->
        <item name="actionOverflowButtonStyle">@style/MyActionOverFlowButtonStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionOverFlowButtonStyle</item>
    </style>

    <style name="AppThemeTranslucent" parent="Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="dialog_with_background_dim_false">
        <!--activity不变暗-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="MyActionOverFlowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_db</item>
    </style>

    <style name="Theme.ApplicationSplash" parent="Theme.Application">
        <item name="android:windowBackground">@drawable/ic_launcher_foreground</item>
    </style>
</resources>
