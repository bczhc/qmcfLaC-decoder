<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorAccent</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/hint_color</item>
    </style>

    <style name="AppButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="colorButtonNormal">@color/white</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme">
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@style/AppButtonStyle</item>
    </style>

    <style name="BaseAppThemeWithoutBar" parent="BaseAppTheme">
        <!-- TODO NoActionBar -->
    </style>

    <style name="AppThemeWithBar" parent="BaseAppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="colorPrimaryDark" tools:targetApi="lollipop">@color/colorPrimaryDark</item>
        <item name="colorAccent" tools:targetApi="lollipop">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="AppThemeNotTranslucent" parent="BaseAppThemeWithoutBar">
        <!-- Customize your theme here. -->
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="InputDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowFrame">@color/transparent</item><!-- 边框 -->
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item><!-- 半透明 -->
        <item name="windowNoTitle">true</item><!-- 无标题 -->
        <item name="android:windowBackground">@color/transparent</item><!-- 自己想要的背景 -->
        <item name="android:backgroundDimEnabled">true</item><!-- 模糊 -->
        <item name="android:windowSoftInputMode">stateAlwaysVisible</item><!--显示软键盘-->
        <item name="actionOverflowButtonStyle">@style/MyActionOverFlowButtonStyle</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionOverFlowButtonStyle</item>
    </style>

    <style name="AppThemeTranslucent" parent="Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="dialog_with_background_dim_false">
        <!--activity不变暗-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="MyActionOverFlowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_db</item>
    </style>

    <style name="Test" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:windowBackground">@drawable/ic_launcher_foreground</item>
    </style>
</resources>
