<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="10dp"
>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/candidate"
              android:textSize="20sp"
    />
    <EditText android:layout_width="60dp" android:layout_height="wrap_content"
              android:id="@+id/code"
              android:gravity="center"
              android:layout_gravity="center"
              tools:ignore="Autofill,LabelFor,TextFields"/>
    <pers.zhc.tools.utils.ScrollEditText android:layout_width="match_parent" android:layout_height="match_parent"
                                         android:fillViewport="true"
                                         app:gravity="top"
                                         android:id="@+id/scroll_et"
    />
</LinearLayout>