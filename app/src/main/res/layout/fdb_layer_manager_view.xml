<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white_alpha50"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/drag_icon"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_alignStart="@id/recycler_view"
        android:layout_alignEnd="@id/recycler_view"
        android:background="@color/gray"
        android:src="@drawable/drag_icon"
        tools:ignore="ContentDescription"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@id/drag_icon"
        tools:listitem="@layout/fdb_layer_item_view"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recycler_view"
        android:layout_centerHorizontal="true"
        android:text="@string/create_new"/>
</RelativeLayout>
