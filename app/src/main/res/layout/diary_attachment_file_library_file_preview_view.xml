<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/filename_tv"
              android:textSize="20sp"
              android:text="@string/filename_is"
              />
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/add_time_tv"
              android:textSize="20sp"
              android:text="@string/add_time_is"
    />
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/storage_type_tv"
              android:textSize="20sp"
              android:text="@string/storage_type_is"
    />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="@string/description_is"
              android:textSize="20sp"
    />
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/description_tv"
              android:textSize="20sp"
    />
</LinearLayout>