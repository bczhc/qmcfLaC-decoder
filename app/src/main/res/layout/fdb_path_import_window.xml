<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
>
    <ImageView android:layout_width="0dp"
               android:layout_height="30dp"
               android:layout_alignStart="@id/main_ll"
               android:layout_alignEnd="@id/main_ll"
               android:src="@drawable/drag_icon"
               android:id="@+id/drag_icon"
               tools:ignore="ContentDescription"
               android:background="@color/grey"
    />
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:id="@+id/main_ll"
                  android:layout_below="@id/drag_icon"
    >
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/fdb_path_import_floating_window_title"
                  android:layout_gravity="center_horizontal"
                  android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        />
        <com.google.android.material.progressindicator.CircularProgressIndicator
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progress_circular"
                tools:progress="50"
                android:indeterminate="false"
                android:layout_gravity="center_horizontal"
        />
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/path_import_pause_button"
                android:id="@+id/pause_button"
                android:layout_gravity="center_horizontal"
        />
    </LinearLayout>
</RelativeLayout>
