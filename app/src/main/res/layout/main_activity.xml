<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <pers.zhc.tools.views.SmartHintEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Application.TextInputLayout.FilledBox"
            android:id="@+id/server_et"
            app:hint="@string/settings_server_root_url"
    />
    <pers.zhc.tools.views.SmartHintEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Application.TextInputLayout.FilledBox"
            android:id="@+id/resource_et"
            app:hint="@string/settings_static_resource_root_url"
    />
    <pers.zhc.tools.views.SmartHintEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.Application.TextInputLayout.FilledBox"
            android:id="@+id/github_raw_url_et"
            app:hint="@string/settings_github_raw_root_url"
    />
    <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:layout_gravity="center"
            android:id="@+id/save"
    />
</LinearLayout>