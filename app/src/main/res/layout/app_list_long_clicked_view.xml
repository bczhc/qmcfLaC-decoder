<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/app_label_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/fdb_label"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"/>
    <TextView
        android:id="@+id/app_class_path_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        tools:text="pers.zhc.tools.fdb.FdbMainActivity"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/toggle_app_shortcut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_list_toggle_app_shortcut"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/create_pinned_shortcut"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/app_list_create_pinned_shortcut"/>
    </LinearLayout>
</LinearLayout>
