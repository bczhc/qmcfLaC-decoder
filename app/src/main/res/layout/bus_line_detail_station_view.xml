<?xml version="1.0" encoding="utf-8"?>
<pers.zhc.tools.bus.StationLL
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <view
        android:id="@+id/top_line_node_view"
        class="pers.zhc.tools.bus.TopNodeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/below_bus_info_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="10dp">
        <TextView
            android:id="@+id/ordinal_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bus_line_detail_station_ordinal_tv"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/station_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"/>
    </LinearLayout>
</pers.zhc.tools.bus.StationLL>
