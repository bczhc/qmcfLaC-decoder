<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="@string/fdb_path_import_prompt_dialog_filepath_tv"
              android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
              android:layout_margin="10dp"
              android:id="@+id/path_file_tv"
    />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="vertical">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fdb_path_import_show_drawing_checkbox"
            android:id="@+id/show_drawing_cb"
            android:layout_marginEnd="10dp"
        />
        <com.google.android.material.checkbox.MaterialCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fdb_import_pause_at_first_checkbox"
            android:id="@+id/pause_at_first_cb"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
        />
    </LinearLayout>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            style="?textInputOutlinedStyle"
            android:hint="@string/fdb_default_drawing_interval_et_hint"
            android:id="@+id/fdb_default_drawing_interval_til"
            android:visibility="gone"
    >
        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="@color/transparent"
                android:hint="@string/fdb_default_drawing_interval_et_hint"
                android:inputType="number"
                android:text="2000"
                tools:ignore="HardcodedText"/>
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>
