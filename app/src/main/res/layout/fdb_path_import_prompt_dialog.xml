<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/path_file_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/fdb_path_import_prompt_dialog_filepath_tv"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"/>
    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/show_drawing_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:text="@string/fdb_path_import_show_drawing_checkbox"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fdb_default_drawing_interval_til"
        style="?textInputOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="@string/fdb_default_drawing_interval_et_hint"
        android:visibility="gone">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/fdb_default_drawing_interval_et_hint"
            android:inputType="number"
            android:text="2000"
            android:textColorHint="@color/transparent"
            tools:ignore="HardcodedText"/>
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>
