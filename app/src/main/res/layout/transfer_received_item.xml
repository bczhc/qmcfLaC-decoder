<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingVertical="2.5dp"
>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="@string/transfer_receiving_type_text"
              android:theme="@style/TextAppearance.Material3.TitleMedium"
    />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="@string/transfer_receiving_time_text"
              android:theme="@style/TextAppearance.Material3.TitleMedium"
    />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="@string/transfer_receiving_size_text"
              android:theme="@style/TextAppearance.Material3.TitleMedium"
    />
</LinearLayout>