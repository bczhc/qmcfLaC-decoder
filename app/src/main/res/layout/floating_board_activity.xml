<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_height="match_parent"
        android:layout_width="match_parent" android:id="@+id/main">
    <Switch android:layout_width="wrap_content" android:layout_height="50sp"
            android:text="@string/floating_board"
            android:textSize="17sp"
            android:layout_marginTop="10sp"
            android:id="@+id/f_b_switch"
            android:layout_centerHorizontal="true"
            tools:ignore="RelativeOverlap"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/clear_application_caches"
            android:layout_below="@id/f_b_switch"
            android:layout_centerHorizontal="true"
            android:id="@+id/clear_path_btn"
            android:layout_marginTop="5sp"
    />
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_below="@id/clear_path_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5sp"
            android:id="@+id/open_cache_path_file"
            android:text="@string/open_cache_path_file"
    />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_below="@id/open_cache_path_file"
              android:layout_centerHorizontal="true"
              android:textSize="20sp"
              android:text="@string/drawing_board_name_is_"
              android:id="@+id/f_b_name"
    />
    <Button android:layout_width="32sp"
            android:layout_height="25sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5sp"
            android:background="@android:color/holo_green_light"
            android:id="@+id/small_btn"
    />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_alignParentTop="true"
              android:layout_alignParentLeft="true"
              android:text="@string/check_for_update"
              android:layout_below="@id/f_b_name"
              android:layout_alignParentStart="true"
              android:layout_margin="5sp"
              android:id="@+id/check_for_update_tv"
              tools:ignore="RelativeOverlap"/>
</RelativeLayout>