<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent" android:id="@+id/main">
    <androidx.appcompat.widget.SwitchCompat android:layout_width="wrap_content" android:layout_height="50dp"
            android:text="@string/floating_board"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:id="@+id/f_b_switch"
            android:layout_centerHorizontal="true"
    />
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/clear_application_caches"
            android:layout_below="@id/f_b_switch"
            android:layout_centerHorizontal="true"
            android:id="@+id/clear_path_btn"
            android:layout_marginTop="5dp"
    />
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_below="@id/clear_path_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:id="@+id/open_cache_path_file"
            android:text="@string/open_cache_path_file"
    />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_below="@id/open_cache_path_file"
              android:layout_centerHorizontal="true"
              android:textSize="20sp"
              android:text="@string/drawing_board_name_is_"
              android:id="@+id/f_b_name"
    />
</RelativeLayout>