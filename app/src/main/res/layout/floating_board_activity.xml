<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent" android:id="@+id/main">
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="@string/pick_color"
            android:textSize="22sp"
            android:id="@+id/color_picker_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
    />
    <Button android:layout_width="wrap_content" android:layout_height="50sp"
            android:layout_below="@id/color_picker_button"
            android:text="@string/start_floating_window"
            android:textSize="17sp"
            android:layout_alignLeft="@id/color_picker_button"
            android:layout_alignRight="@id/color_picker_button"
            android:layout_alignStart="@id/color_picker_button"
            android:layout_alignEnd="@id/color_picker_button"
            android:layout_marginTop="5sp"
            android:id="@+id/start_f_w"
    />
</RelativeLayout>