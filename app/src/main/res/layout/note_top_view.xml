<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	<ImageView
			android:id="@+id/cancel_deletion"
			app:srcCompat="@drawable/ic_close"
			android:layout_width="25dp"
			android:layout_height="25dp"
			android:layout_marginStart="20dp"
			android:layout_centerVertical="true" android:contentDescription="@string/cancel_picking_btn"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="32dp"
		android:text="@string/no_notes_were_selected"
		android:textStyle="bold"
		android:textSize="19sp"
		android:layout_centerVertical="true"
		android:layout_alignStart="@id/cancel_deletion"
        android:id="@+id/top_tv"/>

	<CheckBox
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_centerVertical="true"
        android:id="@+id/choose_all"/>

</RelativeLayout>

