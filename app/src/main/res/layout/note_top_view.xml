<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	<ImageView
            android:id="@+id/cancel_deletion"
            app:srcCompat="@drawable/ic_window_close"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:layout_marginLeft="19sp"
            android:layout_marginStart="20sp"
            android:layout_centerVertical="true"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="32sp"
		android:text="@string/no_notes_were_selected"
		android:textStyle="bold"
		android:textSize="19sp"
		android:layout_centerVertical="true"
		android:layout_alignLeft="@id/cancel_deletion"
        android:id="@+id/top_tv"/>

	<CheckBox
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
        android:id="@+id/choose_all"/>

</RelativeLayout>

