<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:padding="10dp"
    >
        <pers.zhc.tools.utils.SmartHintEditText
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:id="@+id/picked_file_et"
                app:hint="@string/file_path"
        />
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="@string/pick_file"
                android:textSize="20sp"
                android:id="@+id/pick_file_btn"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
        />
        <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:hint="@string/description"
                  android:inputType="textMultiLine"
                  android:gravity="top"
                  tools:ignore="Autofill"
                  android:id="@+id/description_et"
        />
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="@string/type"
                  android:textSize="20sp"
                  android:textColor="@color/black"
        />
        <Spinner android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:id="@+id/spinner"
        />
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="@string/submit"
                android:textSize="20sp"
                android:id="@+id/submit_btn"
                android:layout_gravity="center"
        />
    </LinearLayout>
</ScrollView>